border-width = 1px;

#tree-detail-container
    ul
        position: relative
        padding: 1em 0
        white-space: nowrap
        margin: 0 auto
        text-align: center
        
        &::after
            content: ''
            display: table
            clear: both
            
        ul::before
            content: ''
            position: absolute
            top: 0
            left: 50%
            border-left: border-width solid #ccc
            width: 0
            height: 1em
    
    li
        display: inline-block
        vertical-align: top
        text-align: center
        list-style-type: none
        position: relative
        padding: 1em .5em 0 .5em
        
        a
            border: border-width solid #ccc
            padding: .5em .75em
            text-decoration: none
            display: inline-block
            border-radius: 5px
            color: #FFF
            position: relative
            top: border-width
            background: first-workers-content-bg
            cursor: pointer
            
        a:hover,
        a:hover + ul li a
            background: workers-header-bg
            color: #D8D8D8
            border: border-width solid #848484
            
        a:hover + ul li::after, 
        a:hover + ul li::before, 
        a:hover + ul::before, 
        a:hover + ul ul::before
            border-color:  #848484
        
        &::before, &::after
            content: ''
            position: absolute
            top: 0
            right: 50%
            border-top: border-width solid #ccc
            width: 50%
            height: 1em
        
        &::after
            right: auto
            left: 50%
            border-left: border-width solid #ccc
            
        &:only-child::after, &:only-child::before
            display: none
            
        &:only-child
            padding-top: 0
            
        &:first-child::before, &:last-child::after
            border: 0 none
            
        &:last-child::before
            border-right: border-width solid #ccc
            border-radius: 0 5px 0 0
            
        &:first-child::after
            border-radius: 5px 0 0 0
